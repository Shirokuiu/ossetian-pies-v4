.order
  margin-bottom 5px

.order__headline
  margin-bottom: 15px;
  padding-left: 30px;
  font-size: 32px;
  line-height: 38px;
  font-weight: 700;
  color: #3a3a3a;
  
.order__description-text
  margin-bottom: 28px;
  padding-left: 30px;
  padding-right 30px
  font-size: 20px;
  line-height: 24px;
  font-weight: 400;
  color: #4a4b4a
  
.order__list
  margin-bottom 57px
  padding-left 50px
  
.order__list-items
  display flex
  margin-right 75px
  
  font-size: 21px;
  line-height: 25px;
  font-weight: 400;
  color: #404040
  &::before
    content ''
    
    position: relative;
    bottom: 6px;
    
    width 10px
    height 10px
    margin-top auto
    margin-right 10px
    margin-bottom 3px
    
    background-color #fc2b77
    
    border-radius 50%
  &:last-child
    margin-right 0
    
.order__options
  padding-left 30px
  padding-right 30px
    
.order__options-headline
  display flex
  align-items center
  
  font-size: 24px;
  line-height: 29px;
  font-weight: 700;
  color: #404040
  &::before,
  &::after
    content ''
    
    height 3px
    
    background-color #bd414d
  &::before
    width 30px
    margin-right 20px
  &::after
    flex-grow 1
    margin-left 20px
    
.order__options-list
  position relative
  top -13px
  
  padding-top 47px
  padding-left 45px
  padding-bottom 47px
  
  border 3px solid #bd414d
  border-top 0
  
.order__options-list-items
  margin-right: 4.6%;
  &:last-child
    margin-right 0
  
.order__options-list-item-input
  &:checked + .order__options-list-item-label
    .order__options-list-item-label-indicator
      background-color #fecb2f

      border-color #fecb2f
  
.order__options-list-item-label
  position relative
  
  display block
  padding-left 52px
  
  font-size: 21px;
  line-height: 25px;
  font-weight: 400;
  color: #404040
  
  cursor pointer
  &:hover
    .order__options-list-item-label-indicator
      background-color #fecb2f

      border-color #fecb2f
  
.order__options-list-item-label-indicator
  position absolute
  top 0
  left 0
  bottom 0
  
  box-sizing border-box
  width 30px
  height 30px
  margin auto
  
  background-color #f5f5f5
  
  border 1px solid #dddddd
  border-radius 50%
  
  transition 0.2s ease
  
@media(max-width 1750px)
  .order__options-list
    justify-content space-between
    padding-left 25px
    padding-right 25px
  
  .order__options-list-items
    margin-right 0
    
@media(max-width 1380px)
  .order__options-list-item-label
    padding-left 40px
    
    font-size 18px
    line-height 21px
  
@media(max-width 1200px)
  .order__headline
    padding-left 0
    font-size: 25px;
    line-height: 28px;
    
  .order__description-text
    padding-left 15px
    font-size 18px
    line-height 21px
    
  .order__list
    margin-bottom: 27px;
    padding-left 30px
    
  .order__list-items
    font-size 19px
    line-height 21px
    
  .order__options-list
    padding-top 34px
    padding-bottom 33px
    
  .order__options
    padding-left 0
    padding-right 0
    
@media(max-width 1090px)
  .order__list
    padding-left 0
  
  .order__options-list
    padding-left 10px
    padding-right 10px
    
  .order__options-list-item-label
    padding-left 30px
    
  .order__options-list-item-label-indicator
    width 25px
    height 25px
    
@media(max-width 1000px)
  .order__list
    flex-wrap: wrap;
    justify-content: center;
    
  .order__list-items
    margin-right: 0;
    width: 34%;
    margin-bottom: 15px;
    
  .order__options-headline
    &::before
      flex-grow 1
      width auto
      
  .order__options-list
    flex-direction: column;
    align-items: center;
    padding-top: 25px;
    padding-bottom: 11px;
    
  .order__options-list-items
    margin-bottom: 20px;
    width: 200px;
    
@media(max-width 600px)
  .order__list-items
    width: 100%;
    
@media(max-width 500px)
  .order__options-headline
    &::before,
    &::after
      display none
      
  .order__options-list
    border: none;
    align-items: flex-start;
    
  .order__options-list-items
    width auto
    &:last-child
      margin-bottom 0
    
@media(max-width 480px)
  .order__headline
    font-size 21px
    line-height 24px
    
  .order__description-text
    padding-left 0
    padding-right 0
    
    font-size 17px
    line-height 20px
  