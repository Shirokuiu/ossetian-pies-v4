.features
  margin-bottom 28px

.features__headline-wrap
  margin-bottom 15px

.features__headline
  margin-left 30px
  
  font-size 32px
  line-height 38px
  font-weight 700
  color #bf404b
  
.features__content
  padding 30px 0
  
  background-color #fdf5e7
  
.features__list
  padding-left 4%
  
.features__items
  margin-right 6%
  
.features__item-time,
.features__item-moscow,
.features__item-recipe-book,
.features__item-free-delivery
  width 128px
  height 128px
  margin-right 25px
  .time,
  .moscow,
  .recipe-book,
  .free-delivery
    width 128px
    height 128px
    
    fill #be3f4c
    
.features__item-text
  width 177px
  
  font-size 21px
  line-height 25px
  font-weight 400
  color #404040
  &--moscow
    width 205px
  &--medium
    width 193px
    
@media(max-width 1790px)
  .features__list
    justify-content space-between
    padding-left 4%
    
  .features__items
    margin-right 0
    &:last-child
      margin-right 0
      
@media(max-width 1500px)
  .features__content
    padding 20px 0
  
  .features__item-time, .features__item-moscow, .features__item-recipe-book, .features__item-free-delivery
    width 70px
    height 70px
    margin-right 15px
    .time,
    .moscow,
    .recipe-book,
    .free-delivery
      width 70px
      height auto
      
  .features__item-text
    font-size 17px
    line-height 20px
    
@media(max-width 1200px)
  .features__headline
    margin-left 0
    
    font-size 25px
    line-height 28px
  
  .features__list
    padding-left 0
    
@media(max-width 1130px)
  .features__item-time, .features__item-moscow, .features__item-recipe-book, .features__item-free-delivery
    width 40px
    height 40px
    margin-right 15px
    .time,
    .moscow,
    .recipe-book,
    .free-delivery
      width 40px
      height auto
      
  .features__item-text
    font-size 16px
    line-height 19px
    
@media(max-width 1000px)
  .features__headline
    text-align center
  
  .features__list
    flex-direction column
    align-items center
    
  .features__items
    width 243px
    margin-bottom: 15px;
    &:last-child
      margin-bottom 0
  